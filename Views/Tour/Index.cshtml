<section class="tours">
    <div class="container">
        <div class="title">
            <h1>
                VietNam Pakage Tours 2020
            </h1>
        </div>
        <div class="TourListContainer">
            <div class="TourList2">
                <div class="TourList">
                    @foreach (var item in Model)
                    {
                        <div class="img-list">
                            <div class="tour">
                                <a href="tour-place.html" class="tour-img">
                                    <img src="@Url.Content("~/Content/")@item.LinkImage">
                                    <p class="price"><span>$@item.Gia</span> <small>/ @item.NumDay Days</small></p>
                                </a>
                                <span class="desc">
                                    <p class="star">
                                        <span>
                                            @for (int i = 0; i < @item.NumStar; i++)
                                            {
                                                <i class="fas fa-star yellow"></i>
                                            }
                                            @for (int i = 0; i < 5 - @item.NumStar; i++)
                                            {
                                                <i class="fas fa-star"></i>
                                            }
                                        </span>
                                        @item.NumView Reviews
                                    </p>
                                    <h2><a href="tour-place.html">@item.TenTour</a></h2>
                                    <span class="city">@item.Place</span>
                                </span>
                            </div>
                        </div>
                    }
                </div>
                <div class="row">
                    <div class="col-md-12 text-center">
                        <ul class="pagination">
                            <li class="disabled"><a href="#">&laquo;</a></li>
